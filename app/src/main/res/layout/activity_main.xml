<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f2020"
    android:orientation="vertical"
    tools:context="com.example.khasirakanda.cardname.MainActivity">

    <ImageView

        android:id="@+id/ii1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/mainicon" />


    <TextView
        android:id="@+id/ii2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ii1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Khasirakanda"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ii3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ii2"
        android:layout_centerHorizontal="true"
        android:text="Web Designer Devision"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/ii0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ii3"
        android:layout_centerHorizontal="true">

        <ImageView

            android:id="@+id/ii4"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginTop="39dp"
            android:src="@drawable/ic_call_black_24dp" />

        <TextView

            android:id="@+id/ii5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ii4"
            android:layout_toRightOf="@+id/ii4"
            android:text="+6282 33 290 1990"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/ii6"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_below="@+id/ii4"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_email_black_24dp" />

        <TextView
            android:id="@+id/ii7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ii6"
            android:layout_below="@+id/ii5"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/ii6"
            android:text="Khasirakanda17@gmail.com"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ii0"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/ii8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:text="AlufStudio Project"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ii8"
            android:text="Jl.Kampus II UIN Alauddin Samata, Sulawesi"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </RelativeLayout>


</RelativeLayout>

